@model IEnumerable<EmployeeModel>
@{
    ViewData["Title"] = "Employees";
}

<h1 class="display-3 text-center" style="margin-bottom: 32px;">@ViewData["Title"]</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 100px;">
    @foreach (var employee in Model)
    {
        <a asp-area="" asp-controller="Employees" asp-action="Detail" asp-route-id="@employee.id">
            <img src="data:image/jpeg;base64, @Convert.ToBase64String(employee.image_data)" alt="Image" height="200"/>
        </a>
    }
</div>


