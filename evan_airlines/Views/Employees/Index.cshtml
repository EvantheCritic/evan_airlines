@model IEnumerable<EmployeeModel>
@{
    ViewData["Title"] = "Employees";
}

<h1 class="display-3 text-center" style="margin-bottom: 32px;">@ViewData["Title"]</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 20px;">
    @foreach (var employee in Model)
    {
        <div>
            <a asp-area="" asp-controller="Employees" asp-action="Detail" asp-route-id="@employee.id">
                <img src="~/Images/@(employee.name).jpg" alt="Female" height="120" />
            </a>
            <p>@employee.name</p>
        </div>
    }
</div>


